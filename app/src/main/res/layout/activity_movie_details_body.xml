<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Synopsis label -->
        <TextView
            android:id="@+id/movie_details_synopsis_label"
            style="@style/movie_detail_text_label"
            android:text="@string/movie_details_synopsis_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <!-- Movie synopsis -->
        <TextView
            android:id="@+id/movie_details_synopsis_value"
            style="@style/movie_detail_text_value"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_details_synopsis_label"
            tools:text="@string/debug_movie_details_synopsis_text"/>
    </android.support.constraint.ConstraintLayout>
</layout>